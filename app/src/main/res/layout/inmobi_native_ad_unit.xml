<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/outer_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black"
    android:padding="8dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/poster_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/ad_text_1"
                style="@style/UkonAdTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:paddingStart="8dp"
                android:paddingTop="8dp"
                tools:text="ad_text_1" />

            <TextView
                android:id="@+id/ad_text_2"
                style="@style/UkonAdSubTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ad_text_1"
                android:layout_margin="2dp"
                android:paddingStart="8dp"
                android:paddingBottom="8dp"
                tools:text="ad_text_2" />

            <TextView
                android:id="@+id/ad_text_3"
                style="@style/UkonAdSubTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ad_text_2"
                android:layout_margin="2dp"
                android:paddingStart="8dp"
                android:paddingBottom="8dp"
                tools:text="ad_text_3" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>