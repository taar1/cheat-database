<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/outer_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black"
    android:padding="10dp">


    <TextView
        android:id="@+id/ad_text_1"
        style="@style/UkonAdTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/poster_card"
        android:layout_margin="2dp"
        android:text="@string/ukon_ad_title" />

    <TextView
        style="@style/UkonAdSubTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ad_text_1"
        android:layout_margin="2dp"
        android:text="@string/ukon_ad_subtitle" />

    <TextView
        style="@style/UkonAdSubTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ad_text_1"
        android:layout_alignEnd="@id/poster_card"
        android:layout_margin="2dp"
        android:text=">>>" />

    <androidx.cardview.widget.CardView
        android:id="@+id/poster_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dp"
        app:cardUseCompatPadding="true">

        <ImageView
            android:id="@+id/ukon_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="Ukon"
            android:minHeight="184dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ukon_ad_450_225" />
    </androidx.cardview.widget.CardView>

</RelativeLayout>