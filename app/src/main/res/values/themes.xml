<resources>

    <!-- Application theme. -->
    <style name="AppThemeBase" parent="Theme.MaterialComponents.NoActionBar">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="colorAccent">@color/color_accent</item>
        <!--        <item name="android:windowNoTitle">true</item>-->
        <item name="android:windowActionBar">false</item>
        <!--<item name="android:textColorPrimary">#fff</item>-->
        <item name="colorControlNormal">#fff</item>
        <item name="colorControlHighlight">#3fff</item>
        <item name="android:navigationBarColor">@color/action_bar</item>

        <!-- Star Rating Bar Color -->
        <item name="colorControlActivated">@color/gold</item>

    </style>

    <style name="GameTitle">
        <item name="android:textColor">#EEFFFFFF</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/lato_bold</item>
    </style>

    <style name="CheatTitle">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/lato_bold</item>
    </style>

    <style name="NormalTextBold">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/lato_bold</item>
    </style>

    <style name="NormalText">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/lato_regular</item>
    </style>

    <style name="NormalTextLight">
        <item name="android:textColor">#EEFFFFFF</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/lato_light</item>
    </style>

    <style name="SmallTextBold">
        <item name="android:textColor">#EEFFFFFF</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/lato_bold</item>
    </style>

    <style name="SmallTextLight">
        <item name="android:textColor">#EEFFFFFF</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/lato_light</item>
    </style>

    <style name="VerySmallTextLight">
        <item name="android:textColor">#EEFFFFFF</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/lato_light</item>
    </style>

    <style name="WalkthroughText">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">14sp</item>
        <item name="android:typeface">monospace</item>
    </style>

    <style name="ActivityMainTitle">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">26sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/lato_bold</item>
    </style>

    <style name="WelcomeTextDate">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/lato_bold</item>
    </style>

    <style name="TopMemberName">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/lato_bold</item>
    </style>

    <style name="TopMemberCheatCount">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/lato_light</item>
    </style>

    <style name="TopMemberFreetext">
        <item name="android:textColor">#CCCCCC</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/lato_light</item>
    </style>

    <style name="TopMemberHomepage">
        <item name="android:textColor">#DDDDDD</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/lato_light</item>
    </style>

    <style name="LoginFormContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:fontFamily">@font/lato_regular</item>
    </style>

    <style name="ContactFormContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">16dp</item>
        <item name="android:fontFamily">@font/lato_regular</item>
    </style>

    <style name="SearchResultListrowGroup">
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">@font/lato_bold</item>
    </style>

    <style name="MediumTitleBold">
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/lato_bold</item>
    </style>

    <style name="SearchResultListItemText">
        <item name="android:textColor">#EEFFFFFF</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/lato_light</item>
    </style>


    <!-- Style for items in a list -->
    <style name="ListSubItemPhone">
        <item name="android:textColor">#AAAAAA</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/lato_regular</item>
    </style>

    <style name="ListSubItemPhoneMedium">
        <item name="android:textColor">#AAAAAA</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/lato_regular</item>
    </style>

    <style name="UndoBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">120dp</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@drawable/undobar</item>
        <item name="android:clickable">true</item>
        <item name="android:showDividers">middle</item>
        <item name="android:divider">@drawable/undobar_divider</item>
        <item name="android:dividerPadding">12dp</item>
        <item name="android:fontFamily">@font/lato_regular</item>
    </style>

    <style name="UndoBarMessage">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:textColor">#fff</item>
        <item name="android:fontFamily">@font/lato_regular</item>
    </style>

    <style name="UndoBarButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:background">@drawable/undobar_button</item>
        <item name="android:drawableLeft">@drawable/ic_undobar_undo</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#fff</item>
        <item name="android:text">@string/undo</item>
        <item name="android:fontFamily">@font/lato_regular</item>
    </style>

    <style name="DefaultButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:backgroundTint">@color/darker_gray</item>
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/lato_bold</item>
    </style>

    <style name="DefaultButtonStyleBorderless" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/lato_bold</item>
    </style>

    <style name="cheat_detail_view_page_indicator">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">12sp</item>
        <item name="android:background">@color/color_primary_dark</item>
    </style>

    <style name="UkonAdTitle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/lato_regular</item>
    </style>

    <style name="UkonAdSubTitle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/lato_regular</item>
    </style>

    <style name="SimpleAlertDialog">
        <item name="colorPrimary">@color/color_accent</item> <!-- Button Text -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSurface">@color/color_primary_dark_transparent
        </item> <!-- Dialog Background -->
        <item name="colorOnSurface">@color/white</item> <!-- Text -->
    </style>
</resources>