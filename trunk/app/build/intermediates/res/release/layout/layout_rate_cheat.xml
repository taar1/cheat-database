<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/navy_blue_medium_dark"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_primary_light"
        android:gravity="center"
        android:padding="5dp"
        android:text="@string/rate_cheat"
        android:textAppearance="@style/CheatTitleTablet" />

    <RatingBar
        android:id="@+id/ratingbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:numStars="5"
        android:paddingBottom="20dp"
        android:paddingTop="20dp"
        android:progressDrawable="@drawable/ratingbarorange_ratingbar_full_holo_dark"
        android:stepSize="0.5" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_primary_light"
        android:gravity="right"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bluedark01_btn_default_holo_dark"
            android:text="@string/cancel" />

        <Button
            android:id="@+id/btn_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bluedark01_btn_default_holo_dark"
            android:text="@string/rate_cheat" />
    </LinearLayout>
</LinearLayout><!-- From: file:/C:/Users/Dominik/Workspaces/Android/Cheat-Database/app/src/main/res/layout/layout_rate_cheat.xml -->