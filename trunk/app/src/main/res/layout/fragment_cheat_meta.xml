<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/standard_background"
    android:baselineAligned="false"
    android:orientation="vertical">

    <TextView
        android:id="@+id/text_cheat_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textAppearance="@style/CheatTitleTablet"
        android:textIsSelectable="false" />

    <LinearLayout
        android:id="@+id/llMain"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="100"
        android:orientation="vertical">

        <ScrollView
            android:id="@+id/scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minHeight="300dp"
            android:minWidth="300dp">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/submission_date_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="6dp"
                    android:paddingLeft="10dp"
                    android:paddingStart="8dp"
                    android:paddingTop="6dp">

                    <TextView
                        android:id="@+id/submission_date_title"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/meta_submission_date"
                        android:textAppearance="@style/NormalText"></TextView>

                    <TextView
                        android:id="@+id/submission_date_text"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/meta_unknown"
                        android:textAppearance="@style/NormalText"></TextView>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llBuffer1"
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@color/drawer_divier_bars_background"
                    android:orientation="horizontal"></LinearLayout>

                <LinearLayout
                    android:id="@+id/llViewsLifetime"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="6dp"
                    android:paddingLeft="10dp"
                    android:paddingStart="8dp"
                    android:paddingTop="6dp">

                    <TextView
                        android:id="@+id/lifetime_views_title"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/meta_views_lifetime"
                        android:textAppearance="@style/NormalText"></TextView>

                    <TextView
                        android:id="@+id/lifetime_views_text"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/meta_unknown"
                        android:textAppearance="@style/NormalText"></TextView>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llBuffer2"
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@color/drawer_divier_bars_background"
                    android:orientation="horizontal"></LinearLayout>

                <LinearLayout
                    android:id="@+id/llViewsToday"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="6dp"
                    android:paddingLeft="10dp"
                    android:paddingStart="8dp"
                    android:paddingTop="6dp">

                    <TextView
                        android:id="@+id/views_today_title"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/meta_views_today"
                        android:textAppearance="@style/NormalText"></TextView>

                    <TextView
                        android:id="@+id/views_today_text"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/meta_unknown"
                        android:textAppearance="@style/NormalText"></TextView>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llBuffer3"
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@color/drawer_divier_bars_background"
                    android:orientation="horizontal"></LinearLayout>

                <LinearLayout
                    android:id="@+id/llRating"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="6dp"
                    android:paddingLeft="10dp"
                    android:paddingStart="8dp"
                    android:paddingTop="6dp">

                    <TextView
                        android:id="@+id/tvAverageRatingTitle"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/meta_rating_average"
                        android:textAppearance="@style/NormalText"></TextView>

                    <TextView
                        android:id="@+id/tvAverageRatingText"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/meta_unknown"
                        android:textAppearance="@style/NormalText"></TextView>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llBuffer4"
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@color/drawer_divier_bars_background"
                    android:orientation="horizontal"></LinearLayout>

                <LinearLayout
                    android:id="@+id/llSubmittedBy"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="6dp"
                    android:paddingLeft="10dp"
                    android:paddingStart="8dp"
                    android:paddingTop="6dp">

                    <TextView
                        android:id="@+id/tvSubmittedByTitle"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/meta_submitted_by"
                        android:textAppearance="@style/NormalText"></TextView>

                    <TextView
                        android:id="@+id/tvSubmittedByText"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/meta_unknown"
                        android:textAppearance="@style/NormalText"></TextView>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llBuffer5"
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@color/drawer_divier_bars_background"
                    android:orientation="horizontal"></LinearLayout>

                <LinearLayout
                    android:id="@+id/llCountSubmissions"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="6dp"
                    android:paddingLeft="10dp"
                    android:paddingStart="8dp"
                    android:paddingTop="6dp">

                    <TextView
                        android:id="@+id/tvTotalSubmissionsMemberTitle"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/meta_submission_total"
                        android:textAppearance="@style/NormalText"></TextView>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llCountSubmissions2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="6dp"
                    android:paddingLeft="10dp"
                    android:paddingStart="8dp">

                    <TextView
                        android:id="@+id/tvTotalSubmissionsMemberText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="top|start"
                        android:text="@string/meta_unknown"
                        android:textAppearance="@style/NormalText"></TextView>

                    <TextView
                        android:id="@+id/tvTotalSubmissionsShow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="top|end"
                        android:paddingEnd="10dp"
                        android:paddingRight="10dp"
                        android:text="@string/meta_show_all_cheats"
                        android:textAppearance="@style/NormalText"></TextView>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llBuffer6"
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@color/drawer_divier_bars_background"
                    android:orientation="horizontal"></LinearLayout>

                <LinearLayout
                    android:id="@+id/llMemberHomepage"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="6dp"
                    android:paddingLeft="10dp"
                    android:paddingStart="8dp"
                    android:paddingTop="6dp">

                    <TextView
                        android:id="@+id/tvMemberHomepageTitle"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/meta_member_homepage"
                        android:textAppearance="@style/NormalText"></TextView>

                    <TextView
                        android:id="@+id/tvMemberHomepageText"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/meta_unknown"
                        android:textAppearance="@style/NormalText"></TextView>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

    </LinearLayout>

    <include
        layout="@layout/incl_cheat_detail_fragment_action_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>