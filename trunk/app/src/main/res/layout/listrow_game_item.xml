<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/game_list_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="20dp"
    android:background="?selectableItemBackground"
    android:gravity="center_vertical"
    android:minHeight="64dp"
    android:orientation="vertical"
    android:padding="@dimen/outer_padding_listview_item">

    <TextView
        android:id="@+id/cheat_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:text="@string/placeholder"
        android:textAppearance="@style/ListrowFirstLine" />

    <TextView
        android:id="@+id/cheats_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:text="@string/placeholder"
        android:textAppearance="@style/ListrowSecondLine" />

</LinearLayout>